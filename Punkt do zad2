package com.company;
public class Punkt {

     int x;
     int y;
    public Punkt() {
        this.x = 0;
        this.y = 0; }
    public Punkt(int x, int y) {
        this.x = x;
        this.y = y; }
    public double calculateDistance(Punkt norPunkt) {
        double a = this.x - norPunkt.getX();
        double b = this.y - norPunkt.getY();
        return Math.sqrt(a + b); }
    public double calculateDistance(int x2, int y2) {
        double a = this.x - x2;
        double b = this.y - y2;
        return Math.sqrt(a + b); }

    public int getX() {
        return x; }
    public int getY() {
        return y; }
} //Norbert Kulik
