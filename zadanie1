package com.company;



public class Main {

    public static void main(String[] args) {
        Kwadrat kwadrat = new Kwadrat(5);
        System.out.println("Obw√≥d = "+ kwadrat.obwod());
        System.out.println("Pole = "+ kwadrat.pole());
    }

}

class Kwadrat {

     int bok;
    public Kwadrat(int bok) {
        this.bok = bok; }
    public int obwod() {
        return bok * 4; }
    public int pole() {
        return (int) Math.pow(bok, 2);
    }
}//Norbert Kulik
